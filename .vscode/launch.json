{
    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET 8 LambdaApi Launch",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "Build Solution",
            "program": "${workspaceFolder}/src/LambdaApi/bin/Debug/net8.0/LambdaApi.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/LambdaApi",
            "stopAtEntry": false,
            "console": "internalConsole",
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            }
        }
    ]
}
